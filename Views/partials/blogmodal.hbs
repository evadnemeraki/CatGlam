<div id="myModalB" class="modal">

  <!-- Modal content-->
  <div class="modal-content">
    <span class="closeB close">&times;</span>
<form role="form" action="blog/subir" method="POST">
  <div class="form-group">
    <label for="imagenblog">Imagen de la publicaci√≥n (URL): </label>
    <input class="form-control" name="imagenblog" type="text" id="imagenblog">
    <label for="textoblog">Texto: * </label>
    <input class="form-control" name="textoblog" type="text" id="textoblog">
