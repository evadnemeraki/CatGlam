<!-- The Add Category Modal -->
<div id="myModalU" class="modal">

  <!-- Modal content-->
  <div class="modal-content">
    <span class="closeU close">&times;</span>
<form role="form" action="http://localhost:3000/carrito/perfil/subir" method="POST">
  <div class="form-group">
    <label for="Producto">Nueva foto de perfil (URL): </label>
    <input class="form-control" name="nfoto" type="text" id="nfoto">
  </div>
<button type="submit" class="btnSave btn btn-secondary btn-rounded btn-sm my-0 m-1">Guardar</button>    
    </form>
  </div>
</div>


<script>
//Add Category > Get the modal
var modalU = document.getElementById("myModalU");
// Get the <span> element that closes the modal
var span = document.getElementsByClassName("closeU")[0];
// When the user clicks on <span> (x), close the modal
span.onclick = function() {
  modalU.style.display = "none";
}
// When the user clicks anywhere outside of the modal, close it
window.addEventListener('click', function() {
  if (event.target == modalU){
        modalU.style.display = "none";
  }});
</script>